<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="870dp"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:background="@color/background"
        android:gravity="center"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="40dp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/title_login"

        android:scaleX="0.7"
        android:scaleY="0.7">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_rectangular"/>

        <EditText
            android:id="@+id/et_loginactivity_username"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:hint="account"
            android:layout_below="@+id/icon"
            android:background="@drawable/edit_background"
            android:paddingLeft="80dp"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/et_loginactivity_password"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="30sp"
            android:hint="password"
            android:background="@drawable/edit_background"
            android:layout_below="@+id/et_loginactivity_username"
            android:paddingLeft="80dp"
            android:layout_marginTop="20dp"
            android:maxLines="1"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/user_name"
            android:scaleType="fitXY"

            android:layout_below="@+id/icon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/psw"
            android:scaleType="fitXY"

            android:layout_below="@+id/et_loginactivity_username"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/bt_loginactivity_login"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/et_loginactivity_password"

            android:text="Login"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            android:background="@drawable/button_press"/>

        <Button
            android:id="@+id/bt_loginactivity_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="register"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:backgroundTint="@color/white"
            android:layout_alignRight="@+id/bt_loginactivity_login"
            android:layout_below="@+id/bt_loginactivity_login"/>

        <CheckBox
            android:id="@+id/check"
            android:checked="false"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleX="2"
            android:scaleY="2"
            android:layout_marginTop="20dp"
            android:layout_marginRight="-50dp"
            android:layout_alignRight="@+id/et_loginactivity_password"
            android:layout_below="@+id/et_loginactivity_username" />


    </RelativeLayout>

</RelativeLayout>




